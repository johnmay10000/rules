{
  "name": "mcp-fp-rules",
  "version": "1.0.0",
  "description": "MCP Server for Global AI Rules",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts && npm run copy-rules",
    "copy-rules": "cp -r ../code_guidelines ../universal_rules dist/",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.{ts,json}\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.4",
    "fast-glob": "^3.3.2",
    "winston": "^3.11.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "tsx": "^4.7.1",
    "tsup": "^8.0.2",
    "vitest": "^1.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "@types/eslint": "^8.56.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
